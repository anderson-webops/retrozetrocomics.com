{
	"compilerOptions": {
		/* language & emit ------------------------------------------------------ */
		"target": "ESNext",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"baseUrl": ".",
		/* aliases -------------------------------------------------------------- */
		"paths": {
			"~/*": [
				"src/*"
			],
			"@/*": [
				"src/*"
			]
			// ðŸ‘ˆ  NEW  â€” matches Viteâ€™s "@/â€¦" imports
		},
		/* convenience ---------------------------------------------------------- */
		"allowJs": true,
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"useDefineForClassFields": true,
		/* strictness & lint-friendly flags ------------------------------------- */
		"strict": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		/* noEmit because Vite handles bundling --------------------------------- */
		"noEmit": true
	},
	/* tell Volar about the Vue-Macros plugins (unchanged) */
	"vueCompilerOptions": {
		"plugins": [
			"@vue-macros/volar/define-models",
			"@vue-macros/volar/define-slots"
		]
	},
	/* the generated .d.ts files live under src/, so no change needed */
	"include": [
		"src"
	],
	"exclude": [
		"dist",
		"node_modules",
		"cypress"
	],
	/* project reference for vite.config.ts type-checking (unchanged) */
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
