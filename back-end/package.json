{
	"name": "back-end",
	"version": "1.0.0",
	"description": "",
	"type": "module",
	"main": "dist/server.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "node dist/server.js",
		"build": "tsc",
		"watch": "tsc -w",
		"dev": "nodemon --exec ts-node src/server.ts",
		"lint": "eslint src/**/*.ts",
		"lint-fix": "eslint src/**/*.ts --fix"
	},
	"dependencies": {
		"@types/cookie-parser": "^1.4.8",
		"@types/cookie-session": "^2.0.49",
		"@types/readline-sync": "^1.4.8",
		"argon2": "^0.41.1",
		"body-parser": "^1.20.3",
		"cookie-parser": "^1.4.7",
		"cookie-session": "^2.1.0",
		"eslint-plugin-format": "^0.1.3",
		"express": "^4.21.2",
		"express-session": "^1.18.1",
		"mongoose": "^8.8.4",
		"readline-sync": "^1.4.10"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^3.11.2",
		"@types/body-parser": "^1.19.5",
		"@types/express": "^5.0.0",
		"@types/express-session": "^1.18.1",
		"@types/node": "^22.10.1",
		"@typescript-eslint/eslint-plugin": "^8.17.0",
		"@typescript-eslint/parser": "^8.17.0",
		"eslint": "^9.16.0",
		"nodemon": "^3.1.7",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.2"
	},
	"eslintConfig": {
		"env": {
			"es2021": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"overrides": [
			{
				"env": {
					"node": true
				},
				"files": [
					".eslintrc.{js,cjs}"
				],
				"parserOptions": {
					"sourceType": "script"
				}
			}
		],
		"parserOptions": {
			"ecmaVersion": "latest",
			"parser": "@typescript-eslint/parser",
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"indent": [
				"error",
				"tab"
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"double"
			],
			"semi": [
				"error",
				"always"
			]
		}
	}
}
